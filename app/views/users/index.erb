<div class="mx-auto max-w-7xl px-5 py-6 space-y-6">
  <div class="w-full">
    <%= turbo_frame_tag "settings-content" do %>
      <div class="flex items-start justify-between gap-4">
        <div>
          <div class="flex flex-wrap items-center gap-2">
            <h1 class="text-xl font-semibold text-gray-900">Settings</h1>
          </div>
          <p class="mt-1 text-sm text-gray-500">Manage your team members and roles.</p>
        </div>

        <% if admin?(current_user) %>  
          <%= render partial: "shared/components/buttons/link", locals: {path: new_user_path, label: "Create User", svg: nil} %>
        <% end %>
      </div>

      <% if admin?(current_user) %>
        <div class="overflow-x-auto bg-white rounded-xl mt-6 shadow-sm border border-gray-200">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase">
                  Name
                </th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase">
                  email
                </th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase">
                  Role
                </th>
              </tr>
            </thead>

            <tbody id="users" class="divide-y divide-gray-100">
              <% if @users.present? %>
                <%= render @users %>
              <% else %>
                <td id="empty-state" class="text-center py-10 opacity-80" colspan="4">
                  <%= render partial: "shared/components/buttons/link", locals: {path: new_user_path, label: "Add User", svg: nil} %>
                </td>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>

      <%= render partial: "user_settings", locals: {user: current_user} %>
      <%= render partial: "tenants/tenant_settings", locals: {tenant: current_user.tenant} %>
      
    <% end %>
  </div> 
</div>
