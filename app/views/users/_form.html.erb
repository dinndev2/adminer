<%= form_with model: @user do |f| %>
  <div class="flex gap-2 my-5">  
    <div> 
      <div class="flex gap-2 items-end">  
        <%= f.label :name, class: "text-gray-600 font-semibold text-xs" %>
        <% if user.errors.full_messages_for(:name).any? %>
          <span class="text-red-500 text-xs"> <%= user.errors.full_messages_for(:name).first %> </span>
        <% end %>
      </div>
      <%= f.text_field :name,
        class: "rounded-lg focus:outline-none border mt-1 border-gray-300 p-2"
      %>
    </div>
    <div class="flex flex-col flex-1"> 
      <div class="flex gap-2 items-end">  
        <%= f.label :email, class: "text-gray-600 font-semibold text-xs" %>
        <% if user.errors.full_messages_for(:email).any? %>
          <span class="text-red-500 text-xs"> <%= user.errors.full_messages_for(:email).first %> </span>
        <% end %>
      </div>
      <%= f.text_field :email, class: "rounded-lg focus:outline-none border mt-1 border-gray-300 p-2" %>
    </div>
  </div>
  <%= render partial: "shared/components/buttons/main", locals: {label: "Invite User"} %>
<% end %>