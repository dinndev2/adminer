<%= turbo_frame_tag "modal" do %>  
  <div
    data-modal-target="wrapper"
    id="modal"
    data-controller="modal"
    class="fixed inset-0 z-50 hide px-4 py-8 sm:py-12"
  >
    <!-- backdrop -->
    <div
      data-action="click->modal#close"
      class="absolute inset-0 bg-black/40 backdrop-blur-sm"
    ></div>

    <!-- modal panel -->
    <div id="modal-content-wrapper" data-modal-target="content" class="relative mx-auto w-full max-w-3xl overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-xl">
      <button
        data-action="modal#close"
        class="absolute right-4 top-4 inline-flex h-10 w-10 items-center justify-center rounded-xl bg-gray-50 text-gray-500 hover:bg-gray-100 hover:text-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-100"
      >
        âœ•
      </button>

      <div class="max-h-[75vh] overflow-y-auto p-6 scrollbar-subtle">
        <%= turbo_frame_tag "modal-content" %>
      </div>
    </div>
  </div>
<% end %>
