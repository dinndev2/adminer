<div id="<%= status %>">
  <div class="flex items-center justify-between">
    <h2 class="text-lg mb-2 font-semibold text-gray-900"><%= label %></h2>
    <% if label == "Today" %>
      <%# link_to "View all", bookings_path, class: "text-sm font-semibold text-gray-700 hover:text-gray-900" %>
    <% end %>
  </div>
  <% if bookings.any? %>
    <div class="scrollbar-subtle divide-y flex flex-col gap-2 divide-gray-100 max-h-[520px] overflow-y-auto pr-2 -mr-2">
      <%= render bookings, status_key: status %>
    </div>
  <% else %>
    <div class="p-8 text-center">
      <%= image_tag "empty_state.jpeg", alt: "No bookings yet", class: "mx-auto mb-4 h-28 w-auto opacity-90" %>
      <p class="text-sm font-medium text-gray-900">No bookings for <%= label %> yet.</p>
      <p class="mt-1 text-sm text-gray-600">You’re clear — enjoy the peace.</p>
    </div>
  <% end %>
</div>
