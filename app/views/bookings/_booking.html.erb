<div
  class="group relative cursor-pointer flex flex-col gap-3 rounded-xl border border-gray-200 bg-white p-5 shadow-sm transition
         hover:-translate-y-0.5 hover:border-gray-300 hover:shadow-md max-w-sm"
>
  <div class="flex items-start justify-between gap-3">
    <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-1 text-xs font-medium text-gray-700">
      <%= booking.service&.name.to_s.titleize.presence || "Service" %>
    </span>

    <span class="text-[11px] text-gray-400">
      With <span class="font-medium text-gray-600"><%= booking.customer.name %></span>
    </span>
  </div>

  <div class="space-y-1">
    <h3 class="text-base font-semibold leading-snug text-gray-900 line-clamp-2">
      <%= booking.name %>
    </h3>

    <% if booking.description.present? %>
      <p class="text-sm text-gray-600 line-clamp-2">
        <%= booking.description %>
      </p>
    <% end %>
  </div>

  <div class="mt-1 flex items-center gap-2 text-sm text-gray-600">
    <%= inline_svg_tag "calendar.svg", class: "h-4 w-4 text-gray-400" %>
    <span class="font-medium text-gray-700"><%= booking_date(booking) %></span>
  </div>

  <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-transparent group-hover:ring-gray-200"></div>
</div>
