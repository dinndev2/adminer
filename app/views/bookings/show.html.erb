<%= turbo_frame_tag "modal-content" do %>
 <%# app/views/bookings/show.html.erb (modal content) %>

  <% assigned_user = @booking.assigned_to %>
  <% service_name  = @booking.service&.name || "Service" %>
  <% service_price = @booking.service&.price %>
  <% customer_name = @booking.customer&.name || "—" %>
  <% customer_email = @booking.customer&.email %>
  <% customer_phone = @booking.customer&.phone %>
  <% customer_address = @booking.customer&.address %>

  <% status_label =
    case @booking.status
    when "created"    then "Created"
    when "not_finish" then "In progress"
    when "finished"   then "Finished"
    else @booking.status.to_s.humanize
    end
  %>

  <% status_pill = status_style(@booking.status)[:pill] %>

  <div class="w-full space-y-6">
    <div>
      <!-- Header -->
      <div class="flex items-start justify-between gap-4 pb-6 border-b border-gray-100">
        <div class="flex items-center gap-3">
          <!-- Avatar -->
          <div class="h-12 w-12 overflow-hidden rounded-full border border-gray-200 bg-gray-100">
            <% if assigned_user&.respond_to?(:avatar) && assigned_user.avatar&.attached? %>
              <%= image_tag assigned_user.avatar, class: "h-full w-full object-cover" %>
            <% else %>
              <div class="flex h-full w-full items-center justify-center text-xs font-semibold text-gray-500">
                <%= (assigned_user&.name || "?").to_s.first(1).upcase %>
              </div>
            <% end %>
          </div>

          <div class="min-w-0">
            <!-- Small label row -->
            <div class="flex flex-wrap items-center gap-2">
              <% if @booking.business.present? %>
                <span class="inline-flex items-center gap-2 rounded-full border border-gray-200 bg-gray-50 px-2.5 py-1 text-xs font-medium text-gray-700">
                  <%= inline_svg_tag "briefcase.svg", class: "h-4 w-4 text-gray-500" %>
                  <span class="truncate max-w-[180px]"><%= @booking.business.name %></span>
                </span>
              <% end %>

              <span class="inline-flex items-center gap-2 rounded-full border border-gray-200 bg-gray-50 px-2.5 py-1 text-xs font-medium text-gray-700">
                <!-- tag icon -->
                <svg class="h-4 w-4 text-gray-500" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="M20 13l-7 7-11-11V2h7L20 13Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
                  <path d="M7.5 7.5h.01" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
                </svg>
                <span>
                  <%= service_name %>
                  <% if service_price.present? %>
                    <span class="text-gray-500">· <%= number_to_currency(service_price) %></span>
                  <% end %>
                </span>
              </span>

              <span class="inline-flex items-center rounded-full px-2.5 py-1 text-xs font-medium ring-1 ring-inset <%= status_pill %>">
                <%= status_label %>
              </span>
            </div>

            <!-- Title -->
            <h2 class="mt-2 text-xl font-semibold text-gray-900 leading-tight">
              <%= @booking.name.presence || "Booking" %>
            </h2>

            <!-- Sub -->
            <p class="mt-0.5 text-sm text-gray-600">
              Assigned to:
              <span class="font-medium text-gray-900"><%= assigned_user&.name.presence || "Unassigned" %></span>
            </p>
          </div>
        </div>

      </div>

      <!-- Body -->
      <div class="pt-6 grid grid-cols-1 gap-6 sm:grid-cols-2">
        <!-- Main: description -->
        <div>
          <h3 class="text-sm font-semibold text-gray-900">Description</h3>
          <p class="mt-2 text-sm leading-6 text-gray-600 whitespace-pre-line">
            <%= @booking.description.presence || "No description provided." %>
          </p>
        </div>

        <!-- Side: details -->
        <aside class="space-y-3">
          <div class="rounded-xl border border-gray-100 bg-gray-50 p-4">
            <div class="space-y-3 text-sm">
              <div class="flex items-start gap-2  flex-wrap">
                <!-- calendar icon -->
                <svg class="mt-0.5 h-5 w-5 text-gray-500" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="M8 2v3M16 2v3M3.5 9h17M5 6.5h14A1.5 1.5 0 0 1 20.5 8v12A1.5 1.5 0 0 1 19 21.5H5A1.5 1.5 0 0 1 3.5 20V8A1.5 1.5 0 0 1 5 6.5Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
                <div>
                  <p class="font-medium text-gray-900">Schedule</p>
                  <p class="text-gray-600">
                    <%= @booking.from&.strftime("%b %d, %Y") || "—" %>
                    <% if @booking.to.present? %>
                      – <%= @booking.to.strftime("%b %d, %Y") %>
                    <% end %>
                  </p>
                </div>
              </div>

              <% if @booking.duration.present? %>
                <div class="flex items-start gap-2">
                  <!-- clock icon -->
                  <svg class="mt-0.5 h-5 w-5 text-gray-500" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M12 8v5l3 2M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <div>
                    <p class="font-medium text-gray-900">Duration</p>
                    <p class="text-gray-600"><%= @booking.duration %> min</p>
                  </div>
                </div>
              <% end %>

              <% if service_price.present? %>
                <div class="flex items-start gap-2">
                  <!-- tag icon -->
                  <svg class="mt-0.5 h-5 w-5 text-gray-500" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M20 13l-7 7-11-11V2h7L20 13Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
                    <path d="M7.5 7.5h.01" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
                  </svg>
                  <div>
                    <p class="font-medium text-gray-900">Service price</p>
                    <p class="text-gray-600"><%= number_to_currency(service_price) %></p>
                  </div>
                </div>
              <% end %>

              <div class="flex items-start gap-2">
                <!-- user icon -->
                <svg class="mt-0.5 h-5 w-5 text-gray-500" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="M20 21a8 8 0 0 0-16 0" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                  <path d="M12 12a4 4 0 1 0-4-4 4 4 0 0 0 4 4Z" stroke="currentColor" stroke-width="1.5"/>
                </svg>
                <div>
                  <p class="font-medium text-gray-900">Customer</p>
                  <p class="text-gray-600"><%= customer_name %></p>
                  <% if customer_email.present? %>
                    <p class="text-gray-500 text-xs"><%= customer_email %></p>
                  <% end %>
                  <% if customer_phone.present? %>
                    <p class="text-gray-500 text-xs"><%= customer_phone %></p>
                  <% end %>
                  <% if customer_address.present? %>
                    <p class="text-gray-500 text-xs"><%= customer_address %></p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <div class="rounded-xl border border-gray-100 bg-white p-4">
            <p class="text-xs text-gray-500">Updated</p>
            <p class="mt-1 text-sm font-medium text-gray-900">
              <%= time_ago_in_words(@booking.updated_at) %> ago
            </p>
          </div>
        </aside>
      </div>
    </div>
  </div>

<% end %>
