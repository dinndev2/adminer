<div class="mx-auto max-w-6xl px-4 py-6 space-y-6">
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <div class="flex items-center gap-4">
      <div class="h-14 w-14 overflow-hidden rounded-2xl border border-gray-200 bg-gray-50">
        <% if @business.logo.attached? %>
          <%= image_tag @business.logo, class: "h-full w-full object-cover" %>
        <% else %>
          <div class="flex h-full w-full items-center justify-center text-sm font-semibold text-gray-500">
            <%= @business.name.to_s.first(2).upcase %>
          </div>
        <% end %>
      </div>

      <div>
        <h1 class="text-2xl font-semibold text-gray-900"><%= @business.name %></h1>
        <% if @business.website.present? %>
          <%= link_to @business.website, @business.website,
            class: "text-sm text-gray-600 hover:text-gray-900",
            target: "_blank", rel: "noopener" %>
        <% end %>
      </div>
    </div>

    <div class="flex items-center gap-2">
      <%= link_to business_services_path(@business),
        class: "inline-flex items-center justify-center rounded-lg border border-gray-200 bg-white px-3 py-1.5 text-xs font-semibold text-gray-700 hover:bg-gray-50" do %>
        Services
      <% end %>
      <%= link_to business_bookings_path(@business),
        class: "inline-flex items-center justify-center rounded-lg bg-gray-900 px-3 py-1.5 text-xs font-semibold text-white hover:bg-gray-800" do %>
        Bookings
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <div class="lg:col-span-2 space-y-4">
      <div class="rounded-2xl border border-gray-100 bg-white p-6">
        <h2 class="text-sm font-semibold text-gray-900">About</h2>
        <p class="mt-2 text-sm leading-6 text-gray-600">
          <%= @business.description.presence || "No description yet." %>
        </p>
      </div>

      <div class="rounded-2xl border border-gray-100 bg-gray-50 p-6">
        <h2 class="text-sm font-semibold text-gray-900">Details</h2>
        <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
          <div>
            <p class="text-xs text-gray-500">Workspace</p>
            <p class="text-sm font-medium text-gray-900"><%= @business.tenant.name %></p>
          </div>
          <div>
            <p class="text-xs text-gray-500">Created</p>
            <p class="text-sm font-medium text-gray-900"><%= @business.created_at.strftime("%b %d, %Y") %></p>
          </div>
          <% if @business.website.present? %>
            <div class="sm:col-span-2">
              <p class="text-xs text-gray-500">Website</p>
              <p class="text-sm font-medium text-gray-900">
                <%= link_to @business.website, @business.website, target: "_blank", rel: "noopener", class: "hover:underline" %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <aside class="space-y-4">
      <div class="rounded-2xl border border-gray-100 bg-white p-6">
        <h2 class="text-sm font-semibold text-gray-900">Overview</h2>
        <div class="mt-4 space-y-3 text-sm text-gray-600">
          <div class="flex items-center justify-between">
            <span>Services</span>
            <span class="font-semibold text-gray-900"><%= @business.services.count %></span>
          </div>
          <div class="flex items-center justify-between">
            <span>Bookings</span>
            <span class="font-semibold text-gray-900"><%= @business.bookings.count %></span>
          </div>
          <div class="flex items-center justify-between">
            <span>Admins</span>
            <span class="font-semibold text-gray-900"><%= @business.admins.count %></span>
          </div>
        </div>
      </div>
    </aside>
  </div>
</div>
