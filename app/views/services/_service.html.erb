<%= turbo_frame_tag dom_id(service) do %>
  <div class="group rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md">
    <div class="flex items-start justify-between gap-3">
      <div class="space-y-1">
        <h3 class="text-sm font-semibold text-gray-900">
          <%= service.name %>
        </h3>

        <% if service.description.present? %>
          <p class="text-sm text-gray-600 leading-relaxed line-clamp-2">
            <%= service.description %>
          </p>
        <% else %>
          <p class="text-sm text-gray-400 italic">No description</p>
        <% end %>
      </div>

      <% if service.business.present? %>
        <div class="flex items-center gap-3 text-xs font-semibold">
          <%= link_to edit_business_service_path(service.business, service),
            data: { controller: "modal", turbo_frame: "modal-content" },
            class: "text-gray-600 hover:text-gray-900" do %>
            Edit
          <% end %>
          <%= button_to business_service_path(service.business, service),
            method: :delete,
            data: { turbo_confirm: "Delete this service?" },
            class: "text-red-600 hover:text-red-700" do %>
            Delete
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-3 flex flex-wrap items-center gap-3 text-xs text-gray-600">
      <span class="inline-flex items-center gap-1.5 rounded-full bg-gray-50 px-2 py-1 ring-1 ring-inset ring-gray-200">
        <%= inline_svg_tag "charge.svg", class: "h-3.5 w-3.5 text-gray-500" %>
        <span class="font-medium text-gray-700">
          <%= service.price.present? ? number_to_currency(service.price) : "No price" %>
        </span>
      </span>

      <span class="inline-flex items-center gap-1.5 rounded-full bg-gray-50 px-2 py-1 ring-1 ring-inset ring-gray-200">
        <%= inline_svg_tag "calendar.svg", class: "h-3.5 w-3.5 text-gray-500" %>
        <span>Updated <%= time_ago_in_words(service.updated_at) %> ago</span>
      </span>
    </div>
  </div>
<% end %>
