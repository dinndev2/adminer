<div class="mx-auto max-w-7xl px-5 py-6 space-y-6">
  <div class="flex items-start justify-between gap-4">
    <div>
      <div class="flex flex-wrap items-center gap-2">
        <h1 class="text-xl font-semibold text-gray-900">Services</h1>
        <span class="inline-flex items-center gap-2 rounded-full bg-gray-50 px-2.5 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-200">
          <%= inline_svg_tag "briefcase.svg", class: "h-4 w-4 text-gray-500" %>
          <span class="truncate max-w-[220px]"><%= @business.name %></span>
        </span>
      </div>
      <p class="mt-1 text-sm text-gray-500">Manage your service catalog and pricing.</p>
    </div>

    <%= render partial: "shared/components/buttons/link",
      locals: { path: new_business_service_path(@business), label: "Create Service", svg: nil } %>
  </div>

  <div id="services" class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <% if @services.present? %>
      <%= render @services %>
    <% else %>
      <div id="services-empty" class="col-span-full rounded-xl border border-dashed border-gray-200 bg-gray-50 p-8 text-center text-sm text-gray-500">
        <%= image_tag "empty_state.jpeg", alt: "No services yet", class: "mx-auto mb-4 h-32 w-auto opacity-90" %>
        No services yet.
        <div class="mt-3">
          <%= render partial: "shared/components/buttons/link",
            locals: { path: new_business_service_path(@business), label: "Create your first service", svg: nil } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
